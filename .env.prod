# Production Environment Variables
# Copy this file to .env in production and fill in your actual values

# Database Configuration
# For Docker Compose: Use 'postgres' as the hostname (the service name)
# Default credentials match docker-compose.prod.yml defaults
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/pinterest_automation?schema=public"

# PostgreSQL Credentials (should match DATABASE_URL above)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pinterest_automation

# NextAuth Configuration
NEXTAUTH_URL="https://warmingautomation.flexiglob.com"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-production-secret-here-use-openssl-rand-base64-32"

# API Keys (OpenAI, Deepseek, Seedream, etc.)
# Add your production API keys here
# OPENAI_API_KEY=""
# DEEPSEEK_API_KEY=""
# SEEDREAM_API_KEY=""

# Application Settings
NODE_ENV="production"
PORT=3333
