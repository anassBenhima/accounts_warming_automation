// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      UserRole @default(USER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  apiKeys                  ApiKey[]
  assignedApiKeys          ApiKeyAssignment[]  // API keys assigned to this user
  imageToPrompts           ImageToPrompt[]
  imageGenerationPrompts   ImageGenerationPrompt[]
  keywordSearchPrompts     KeywordSearchPrompt[]
  templates                Template[]
  generations              Generation[]
  systemLogs               SystemLog[]
  pushSubscriptions        PushSubscription[]
  bulkGenerations          BulkGeneration[]
}

model ApiKey {
  id          String   @id @default(cuid())
  userId      String
  name        String   // Alias name
  type        String   // "seedream", "openai", "deepseek", "fal"
  usageType   String   @default("all") // "imageGeneration", "keywordSearch", "imageDescription", "all"
  apiKey      String
  modelName   String?  // For specific model names
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user                          User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignments                   ApiKeyAssignment[]  // Users this key is assigned to
  bulkGenImageGen               BulkGeneration[]    @relation("BulkGenImageGenApiKey")
  bulkGenKeywordSearch          BulkGeneration[]    @relation("BulkGenKeywordSearchApiKey")
  bulkGenImageDesc              BulkGeneration[]    @relation("BulkGenImageDescApiKey")

  @@index([type])
  @@index([usageType])
  @@index([userId])
}

// Junction table for API key assignments
model ApiKeyAssignment {
  id        String   @id @default(cuid())
  apiKeyId  String
  userId    String   // User this key is assigned to
  createdAt DateTime @default(now())

  apiKey    ApiKey   @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([apiKeyId, userId])
  @@index([apiKeyId])
  @@index([userId])
}

model ImageToPrompt {
  id        String   @id @default(cuid())
  userId    String
  name      String
  prompt    String   @db.Text
  llmType   String   // "openai" or "deepseek"
  isActive  Boolean  @default(true)
  isShared  Boolean  @default(false)  // Can other users see/use this?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@index([userId])
  @@index([isShared])
}

model ImageGenerationPrompt {
  id        String   @id @default(cuid())
  userId    String
  name      String
  prompt    String   @db.Text
  isActive  Boolean  @default(true)
  isShared  Boolean  @default(false)  // Can other users see/use this?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@index([userId])
  @@index([isShared])
}

model KeywordSearchPrompt {
  id        String   @id @default(cuid())
  userId    String
  name      String
  prompt    String   @db.Text
  isActive  Boolean  @default(true)
  isShared  Boolean  @default(false)  // Can other users see/use this?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@index([userId])
  @@index([isShared])
}

enum TemplateType {
  OVERLAY_IMAGE        // Image with 0.1 opacity as front layer
  WATERMARK            // Watermark with position
  LOGO                 // Logo with position and size
  TEXT                 // Text at center full width
  TEXT_WITH_BACKGROUND // Text with full-width background bar (top, center, or bottom)
  HTML_TEMPLATE        // HTML template with image placeholders
}

model Template {
  id        String       @id @default(cuid())
  userId    String
  name      String
  type      TemplateType

  // File path for uploaded images/logos
  filePath  String?

  // Position settings (x, y in pixels or percentage)
  positionX Float?
  positionY Float?

  // Size settings (width, height in pixels or percentage)
  width     Float?
  height    Float?

  // Opacity (0-1)
  opacity   Float?

  // Text content (for TEXT and TEXT_WITH_BACKGROUND types)
  textContent     String?
  fontSize        Float?
  fontColor       String?
  fontFamily      String?
  backgroundColor String?  // Background color for TEXT_WITH_BACKGROUND type

  // Preview image path
  previewPath String?

  isActive    Boolean  @default(true)
  isShared    Boolean  @default(false)  // Can other users see/use this?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  generationTemplates GenerationTemplate[]
  generatedImages     GeneratedImage[]

  @@unique([userId, name])
  @@index([userId])
  @@index([isShared])
}

enum GenerationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Generation {
  id          String           @id @default(cuid())
  userId      String

  // Step 1: Selected API keys
  imageGenApiKeyId      String
  keywordSearchApiKeyId String
  imageDescApiKeyId     String

  // Model names
  imageGenModel    String
  imageDescModel   String

  // Text in image option (for Seedream)
  includeTextInImage Boolean @default(false)

  // Step 3: Quantity and Image Dimensions
  quantity         Int
  imageWidth       Int      @default(1000)
  imageHeight      Int      @default(1500)

  // Step 4: Uploaded image and keywords
  uploadedImagePath String
  additionalKeywords String?

  // Step 5-7: Selected prompts
  imageToPromptId         String
  imageGenerationPromptId String
  keywordSearchPromptId   String

  // Generated description from uploaded image
  imageDescription String? @db.Text

  // API responses for debugging
  apiResponses Json? @db.Json

  // Status
  status      GenerationStatus @default(PENDING)
  error       String?          @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  generatedImages     GeneratedImage[]
  generationTemplates GenerationTemplate[]

  @@index([userId])
}

model GenerationTemplate {
  id           String     @id @default(cuid())
  generationId String
  templateId   String

  generation   Generation @relation(fields: [generationId], references: [id], onDelete: Cascade)
  template     Template   @relation(fields: [templateId], references: [id])

  @@unique([generationId, templateId])
}

model GeneratedImage {
  id           String     @id @default(cuid())
  generationId String
  templateId   String?    // Track which template was applied

  // Original generated image path
  originalPath String

  // Final processed image path (with templates applied)
  finalPath    String

  // Pinterest metadata
  title        String
  description  String     @db.Text
  keywords     String[]   // Array of keywords
  altText      String?    @db.Text  // Accessibility alt text for the image

  // Status
  status       String     @default("completed") // completed, failed
  error        String?    @db.Text

  createdAt    DateTime   @default(now())

  generation   Generation @relation(fields: [generationId], references: [id], onDelete: Cascade)
  template     Template?  @relation(fields: [templateId], references: [id], onDelete: SetNull)

  @@index([generationId])
  @@index([templateId])
}

enum LogLevel {
  INFO
  WARNING
  ERROR
  SUCCESS
}

enum LogModule {
  AUTH
  API_KEY
  TEMPLATE
  PROMPT
  GENERATION
  IMAGE_PROCESSING
  API_CALL
  SYSTEM
}

model SystemLog {
  id           String    @id @default(cuid())
  userId       String?   // Optional - some logs might be system-wide

  // Log classification
  level        LogLevel
  module       LogModule
  action       String    // e.g., "create", "update", "delete", "api_call", "generation_start"

  // Context
  resourceType String?   // e.g., "ApiKey", "Generation", "Template"
  resourceId   String?   // ID of the resource being acted upon

  // Input/Output tracking
  input        String?   @db.Text  // JSON string of input data
  output       String?   @db.Text  // JSON string of output data

  // Details
  message      String    @db.Text  // Human-readable message
  metadata     String?   @db.Text  // Additional JSON metadata

  // Error tracking
  error        String?   @db.Text  // Error message if any
  stackTrace   String?   @db.Text  // Stack trace for errors

  // Performance
  duration     Int?      // Duration in milliseconds

  createdAt    DateTime  @default(now())

  user         User?     @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([level])
  @@index([module])
  @@index([createdAt])
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String

  // Push subscription details
  endpoint  String   @db.Text  // Push service endpoint URL
  p256dh    String   @db.Text  // Encryption key
  auth      String   @db.Text  // Authentication secret

  // Device/browser information
  userAgent String?  @db.Text
  deviceId  String?  // Custom device identifier

  // Notification preferences
  enabled   Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, endpoint])
  @@index([userId])
  @@index([enabled])
}

enum BulkGenerationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum BulkGenerationRowStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model BulkGeneration {
  id        String               @id @default(cuid())
  userId    String
  name      String               // User-given name for this bulk generation

  // API keys used for this bulk generation
  imageGenApiKeyId      String
  keywordSearchApiKeyId String
  imageDescApiKeyId     String

  // Model names
  imageGenModel         String?  // Model name for image generation
  keywordSearchModel    String?  // Model name for keyword search
  imageDescModel        String?  // Model name for image description

  // Image dimensions
  imageWidth  Int @default(1000)
  imageHeight Int @default(1500)

  // Status tracking
  status        BulkGenerationStatus @default(PENDING)
  totalRows     Int                  @default(0)
  completedRows Int                  @default(0)
  failedRows    Int                  @default(0)
  error         String?              @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user                  User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  rows                  BulkGenerationRow[]
  imageGenApiKey        ApiKey               @relation("BulkGenImageGenApiKey", fields: [imageGenApiKeyId], references: [id])
  keywordSearchApiKey   ApiKey               @relation("BulkGenKeywordSearchApiKey", fields: [keywordSearchApiKeyId], references: [id])
  imageDescApiKey       ApiKey               @relation("BulkGenImageDescApiKey", fields: [imageDescApiKeyId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([imageGenApiKeyId])
  @@index([keywordSearchApiKeyId])
  @@index([imageDescApiKeyId])
}

model BulkGenerationRow {
  id               String @id @default(cuid())
  bulkGenerationId String

  // Input data provided by user
  keywords    String  @db.Text // Comma-separated or JSON keywords
  imageUrl    String           // URL or path to input image
  title       String?          // Base title to generate variations from
  description String?  @db.Text // Base description to generate variations from
  altText     String?  @db.Text // Base alt text to generate variations from
  quantity    Int              // Number of pins to generate for this row

  // API responses for debugging
  apiResponses Json? @db.Json

  // Status tracking
  status        BulkGenerationRowStatus @default(PENDING)
  completedPins Int                     @default(0)
  failedPins    Int                     @default(0)
  error         String?                 @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bulkGeneration BulkGeneration     @relation(fields: [bulkGenerationId], references: [id], onDelete: Cascade)
  generatedPins  BulkGeneratedPin[]

  @@index([bulkGenerationId])
  @@index([status])
}

model BulkGeneratedPin {
  id    String @id @default(cuid())
  rowId String

  // Generated content
  imageUrl       String  @db.Text // Original API-generated image URL
  localImagePath String? @db.Text // Local server path for the downloaded image
  title          String
  description    String  @db.Text
  keywords       String[] // Array of keywords
  altText        String?  @db.Text // Accessibility alt text for the image

  // Status
  status String @default("completed") // completed, failed

  createdAt DateTime @default(now())

  row BulkGenerationRow @relation(fields: [rowId], references: [id], onDelete: Cascade)

  @@index([rowId])
}
